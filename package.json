{
  "name": "base-express.js",
  "version": "1.0.0",
  "author": "Zak Nesler",
  "description": "Base template for Express.js and TypeScript projects.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index.ts --watch src --ext .ts",
    "start": "ts-node ./src/index.ts --ext .ts",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint --fix . --ext ts",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.17",
    "nodemon": "^2.0",
    "ts-node": "^10.7"
  },
  "devDependencies": {
    "@types/express": "^4.17",
    "@types/jest": "^27.5",
    "@types/node": "^17.0",
    "@types/supertest": "^2.0",
    "@typescript-eslint/eslint-plugin": "^5.25",
    "@typescript-eslint/parser": "^5.25",
    "eslint": "^8.15",
    "eslint-config-prettier": "^8.5",
    "eslint-plugin-prettier": "^4.0",
    "jest": "^28.1",
    "prettier": "^2.5",
    "supertest": "^6.2",
    "ts-jest": "^28.0",
    "typescript": "^4.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest"
  }
}
