{
  "name": "base-express",
  "version": "1.0.0",
  "author": "Zak Nesler",
  "description": "Base template for Express.js and TypeScript projects.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index.ts --watch src --ext .ts",
    "build": "esbuild ./src/index.ts --bundle --minify --outfile=dist/index.js --platform=node --target=node18",
    "serve": "node ./dist/index.js",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint --fix . --ext ts",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.17"
  },
  "devDependencies": {
    "@types/express": "^4.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0",
    "@typescript-eslint/eslint-plugin": "^5.25",
    "@typescript-eslint/parser": "^5.25",
    "esbuild": "^0.17.5",
    "eslint-config-prettier": "^8.5",
    "eslint-plugin-prettier": "^4.0",
    "eslint": "^8.15",
    "nodemon": "^2.0",
    "prettier": "^2.5",
    "supertest": "^6.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7",
    "typescript": "^4.6"
  }
}
